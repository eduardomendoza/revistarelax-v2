@import 'normalize.styl'
@import 'responsive.styl'

$atenea_rojo = #b60050
$relax_azul = #00457C
$gris = #d1d1d1


/* ==FUENTES== */
@font-face
	font-family zurich
	src url("../fonts/Zurich_Cn_BT_Regular.eot")

@font-face
	font-family zurich_B
	src url("../fonts/Zurich_Cn_BT_Regular.ttf")

@font-face
	font-family concorde
	src: url("../fonts/concorde-r-regular.eot")

@font-face
	font-family concorde_B
	src url("../fonts/concorde-r-regular.ttf")

	
body, html
	//background-color black
	//font-family 'concorde', 'concorde_B'

body
	/*
	background url('../images/background.jpg') no-repeat fixed
	background-position center center
	-webkit-background-size cover
    -moz-background-size cover
    -o-background-size cover
    //background-size 100%	
    background-size cover
    	*/
    color #c9edff
    height auto
	//font-family 'Open Sans', Arial, Helvetice Neue, sans-serif
	font-size 16px
	//-webkit-text-size-adjust 100%
a
	color #ccc

a:hover
	color #000
	
/* ==MY CLASS== */	
.nota
	font-size .8rem
	font-style italic

.center
	text-align center	
	
.rounded
	-webkit-border-radius 30px 
	-moz-border-radius 30px 
	border-radius 30px 

.clear
	clear both




/* ==TOP BAR INFO== */
.top-bar
	background-color black
	width 100%
	height 50px
	color #fff  
	font-family 'zurich', 'zurich_B'
	
#bar-left
	width 70%
	height 50px
	background-color $relax_azul
	
	& .texto
		//margin-top 10px
		//font-size 2rem
		//margin-left 100px
		text-transform uppercase

#bar-right
	//margin-top 10px
	max-height 50px
	width 30%
	//font-size 1.5rem
	background-color black
	text-align center


.pull-left	
	float left

.pull-right
	float right
	
/* ==HEADER== */
header
	width 90%
	height 130px
	margin 10px auto 50px auto
	background-color:rgba(0,0,0,0.6);
	-moz-box-shadow -4px 22px 45px #000000
	-webkit-box-shadow -4px 22px 45px #000000
	box-shadow -4px 22px 45px #000000
	
	
#logo	
	
	& h1
		color white
		text-transform uppercase
		
	& img
		width 200px
		height 100px

	& span
		display block
		font-size 12px 
		text-transform none
		margin -10px 0px 0px 70px
	
#line
	margin-top 15px
	margin-left 50px
	float left
	height 100px 
	border-left solid 1px white
	
	
/* ==CONTENIDO EN TABS== */
.tabs
	position relative
	width 100%
	overflow hidden
	margin 1em 0 2em
	font-weight 300

/* ==RELAX SABER==*/
#saber 
	width 100%
	height 100%
	position absolute
	top 300px
	left 150px
	background url('../images/relax-saber.png')
	background-repeat no-repeat



/* ==CONTENIDO */
.content section 
	font-family 'concorde', 'concorde_B'
	font-size 1.25em
	display none
	background-color rgba(255,255,255,0.7)
	-moz-box-shadow -4px 22px 45px #000000
	-webkit-box-shadow -4px 22px 45px #000000
	box-shadow -4px 22px 45px #000000


.content section:before, .content section:after
	content ''
	display table

.content section:after 
	clear both


/* Fallback example */
.no-js .content section 
	display block
	padding-bottom 2em
	//border-bottom: 0px solid #47a3da;


.content section.content-current 
	display block

.mediabox
	font-size 1rem
	float left
	height auto
	padding 0 20px

	& img 
		max-width 100%
		display block
		margin 0 auto

	& h3 
		margin 0.75em 0 0.5em

	& p 
		padding 0 0 1em 0
		margin 0
		line-height 1.3

/* ==CONGRESOS== */

.congresos
	position relative
	margin 0px auto
	height 420px
	font-size 16px
	overflow auto

	& ul
		list-style none


	& .uno
		background-color #ccc
		color #000
		font-size 1em
		font-weight normal
		margin 40px 20px


	& .uno h1
		color: #000
		font-size: .8em
		font-weight: bold


	& .uno span
		background-color #801a19
		color #ddd
		float right
		font-size .7em
		font-style italic
		height 35px
		margin 0px auto
		text-align center
		overflow hidden
		width 180px

	 & .dos
		background-color #eee
		color #000
		font-size 1em
		font-weight normal
		margin 40px 20px
		

	& .dos h1
		color #000
		font-size .8em
		font-weight bold
		

	& .dos span
		background-color #801a19
		color #ddd
		float right
		font-size .7rem
		font-style italic
		height 35px
		margin 0px auto
		text-align center
		overflow hidden
		width 180px
	



/* ==FOOTER== */
footer 
	font-family 'PT Sans Narrow', zurich, zurich_B
	text-align center
	width 100%
	height 55px
	background-color $relax_azul
	color white
	margin 0px auto
	position fixed 
	bottom 0px