@import "normalize.styl"
@import "responsive.styl"
@import "registro.styl"

//@import "nib"

$atenea_rojo = #b60050
$atenea_azul = #0055a5
$atenea_gris = #d1d1d1

.font-black
	color black

.font-white
	color white

body
	background #fff url('../images/pattern.png') repeat top left
	/*font-family 'Open Sans', Arial, Helvetice Neue, sans-serif*/
	font-family: 'PT Sans Narrow', Arial, sans-serif;
	font-size 16px

	& a
		text-decoration none
		color black

	& h2
		font-size 1.1rem
		text-align center
	
.header
	color #fff
	position fixed
	width 100%
	height 25px
	line-height 24px
	top 0
	font-size .8rem
	background-color $atenea_azul
	opacity 0.9
	z-index 300
	
.header 
	& a
		padding 5px 10px
		letter-spacing 1px
		color #fff
		text-align right
		text-decoration none
	
.header
	& a:hover
		color #fff

.header 
	& a span
		font-weight bold
		text-transform uppercase

.header 
	& span.right_ab
		position absolute
		right 4px


#logo
	z-index 100
	
	& img
		width 200px
		height 100px

	& h1
		margin 50px 50px
		color $atenea_rojo
		text-transform uppercase

	& span
		display block
		font-size 16px 
		text-transform none
		margin -15px 70px
		width 150pxq

.container 
	width 100%
	height auto
	position relative
	z-index 100
	margin 40px 0px
	padding 0px
	

/* Vertical Accordion Style */
.va-container
	position relative
	margin 40px auto
	

.va-wrapper
	width 100% 
	height 100%
	position relative
	overflow hidden
	
	
.va-title
	font-family 'Open Sans Condensed', sans-serif
	text-transform uppercase
	font-size 2rem
	margin-left 300px
	margin-top -30px
	color #000
	text-shadow 5px 5px 8px #555
	text-align center

.va-content
	display none
	margin-left 400px
	width 100%

.va-slice
	cursor pointer
	width 100%
	overflow hidden
	  	
	& p
		font-size 22px
		margin-bottom 20px
		font-style italic
		font-family Georgia, serif
		color $atenea_azul
		text-shadow 2px 2px 1px #fff

	& ul
		list-style none
		

	& ul li 
		float left 
		margin 0px 30px

	& ul li a
		color #fff
		background $atenea_rojo
		padding 10px 6px
		font-size 14px
		font-family 'PT Sans', sans-serif
		text-transform uppercase
		text-decoration none

	& ul li a:hover
		background #000
		color #fff
		text-shadow none



.va-slice-1
	background #fff url('../images/version-medico.png') no-repeat left center


.va-slice-2
	background #fff url('../images/version-publico.png') no-repeat left center

.va-slice-3
	background #fff url('../images/atenea-pharma.png') no-repeat center center
	background-size 90% 60%
	-webkit-background-size 90% 60% 


.va-nav
	& span
		width 40px
		height 25px
		background transparent url(../images/prev.png) no-repeat center center
		position absolute
		top -35px
		left 50%
		margin-left -20px
		text-indent -9000px		
		opacity 0.7
		cursor pointer
		display none
		z-index 100

.va-nav 
	& span.va-nav-next
		background-image url(../images/next.png)
		top auto
		bottom -35px

.va-nav 
	& span:hover
		opacity:1.0
		
footer 
	text-align center
	Vertical-align center
	width 100%
	height auto
	background-color $atenea_azul
	color white
	margin 5px auto
	
	& .cpy
		font-size 1.3rem
		padding 10px 0px

/* ==LOGIN FORM == */

.button
	width 70px
	background yellow
	display inline-block
	margin 0 auto
	margin-top 1%
	padding 1px
	text-align center
	text-decoration none
	color #fff !important
	cursor pointer
	transition background .3s
	-webkit-transition background .3s

.button:hover
	background-color #ccc

#login
	margin 0px auto
	margin-top 25px
	transition opacity 2s
	-webkit-transition opacity 2s

#triangle-up
	width 0px
	border-top 0px solid transparent
	border-right 100px solid transparent
	border-bottom 50px solid #3399cc
	border-left 100px solid transparent
	margin 10px auto
	top:50px
	left:178px
	-webkit-transform-origin left center
	-webkit-transform-style preserve-3d
	-webkit-transition all 0.6s ease-in-out
	z-index 1
	-webkit-transform: translate3d( -50px, 400px, -800px )
	box-shadow:0px 0px 30px 10px #eee
	opacity 0.4


#triangle-down
	width 0px
	border-top 50px solid $atenea_azul
	border-right 100px solid transparent
	border-bottom 0px solid transparent
	border-left 100px solid transparent
	margin 15px auto

	
#triangle-down-small
	width 0px
	border-top 20px solid $atenea_rojo
	border-right 40px solid transparent
	border-bottom 0px solid transparent
	border-left 40px solid transparent
	transition opacity 5s
	-webkit-transition opacity 5s
	
.left
	margin-left 100px
	
.center
	margin 20px auto !important

		
